{
  "ssh_connections": [
    {
      "host": "tangled-knot",
      "username": "root",
      "projects": [
        {
          "paths": [
            "~/core"
          ]
        }
      ]
    }
  ],
  "context_servers": {
    "kagi": {
      "command": "uvx",
      "args": ["kagimcp"],
      "env": {
        "KAGI_API_KEY": "DgBALx67sAc.pwn-1oMAdLvo4j9V3946I5wIa6vsS4Sb1sS-3O8xB5o"
      },
      "settings": {}
    },
    "playwright": {
      "command": "npx",
      "args": ["@playwright/mcp@latest"],
      "env": {},
      "settings": {}
    },
    "context7": {
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "env": null,
      "settings": {}
    }
  },
  "agent": {
    "profiles": {
      "write": {
        "name": "Write",
        "tools": {
          "copy_path": true,
          "create_directory": true,
          "create_file": true,
          "delete_path": true,
          "diagnostics": true,
          "edit_file": true,
          "fetch": true,
          "list_directory": true,
          "move_path": true,
          "now": true,
          "find_path": true,
          "read_file": true,
          "grep": true,
          "terminal": true,
          "thinking": true,
          "web_search": true,
          "open": true
        },
        "enable_all_context_servers": true,
        "context_servers": {}
      }
    },
    "always_allow_tool_actions": true,
    "default_profile": "ask",
    "default_model": {
      "provider": "anthropic",
      "model": "claude-opus-4-5-thinking-latest"
    }
  },
  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "phi4-16k:latest",
          "display_name": "phi4 16k",
          "max_tokens": 16384,
          "supports_tools": false
        },
        {
          "name": "deepseek-r1:8b",
          "display_name": "deepseek-r1 8b 16k",
          "max_tokens": 16384,
          "supports_tools": false
        }
      ]
    }
  },
  "base_keymap": "VSCode",
  "ui_font_size": 16,
  "buffer_font_size": 16,
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "One Dark"
  },
  "terminal": {
    "font_family": "MesloLGS Nerd Font"
  },
  "languages": {
    "TypeScript": {
      "language_servers": ["!typescript-language-server", "vtsls"]
    },
    "TSX": {
      "language_servers": ["!typescript-language-server", "vtsls"]
    },
    "JavaScript": {
      "language_servers": ["!typescript-language-server", "vtsls"]
    },
    "Markdown": {
      "show_edit_predictions": false
    }
  },
  "lsp": {
    "pyright": {
      "settings": {
        "python": { "pythonPath": ".venv/bin/python", "venvPath": "." }
      }
    }
  }
}
